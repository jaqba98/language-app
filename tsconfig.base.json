{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@english-learning/fe-component": ["libs/fe/component/src/index.ts"],
      "@english-learning/fe-domain": ["libs/fe/domain/src/index.ts"],
      "@english-learning/fe-main": ["libs/fe/main/src/index.ts"],
      "@english-learning/fe-page": ["libs/fe/page/src/index.ts"],
      "@english-learning/fe-route": ["libs/fe/route/src/index.ts"],
      "@english-learning/fe-store": ["libs/fe/store/src/index.ts"],
      "@english-learning/fe-system": ["libs/fe/system/src/index.ts"],
      "@english-learning/fe-ui": ["libs/fe/ui/src/index.ts"],
      "@english-learning/fe-utils": ["libs/fe/utils/src/index.ts"],
      "@english-learning/shared-type": ["libs/shared/type/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
